@page "/ChartTester" 

<RadzenChart>
    <RadzenColumnSeries Data="@revenue" CategoryProperty="Quarter" ValueProperty="Revenue">
        <TooltipTemplate Context="data">
            <div>
                Revenue for <span>@data.Quarter</span> 2020:
                <strong>@data.Revenue</strong>
            </div>
        </TooltipTemplate>
    </RadzenColumnSeries>
    <RadzenValueAxis Min="0" Max="400000" Step="100000" FormatString="{0:C}">
        <RadzenGridLines Visible="true" />
    </RadzenValueAxis>
    <RadzenCategoryAxis>
        <RadzenAxisTitle Text="Quarter" />
        <RadzenGridLines Visible="true" />
    </RadzenCategoryAxis>
    <RadzenLegend Position="LegendPosition.Bottom" />
</RadzenChart>
@code {
    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[]
    {
      new DataItem { Quarter = "Q1", Revenue = 234000 },
      new DataItem { Quarter = "Q2", Revenue = 284000 },
      new DataItem { Quarter = "Q3", Revenue = 274000 },
      new DataItem { Quarter = "Q4", Revenue = 294000 }
        };
}